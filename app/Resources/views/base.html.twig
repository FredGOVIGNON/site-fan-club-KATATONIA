        <script>
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        $("#menu-toggle").click(function()
        {
            if ($("#empty-navbar").hasClass("open"))
            {
                $("#empty-navbar").css("display", "none");
                $("#empty-navbar").removeClass("open");
            }
            else
            {
                $("#empty-navbar").css("display", "block");
                $("#empty-navbar").addClass("open");
            }
        });
        </script>
