                    {#<button id="myBtn"><span class="glyphicon glyphicon-hand-right"></span>Votez pour votre album préféré !<span class="glyphicon glyphicon-heart" aria-hidden="true"></span></button>#}
                       
                      <img id="myBtn" src="{{ asset('img/boutondevoteaveccoeur.png') }}" class="boutongimp" aria-hidden="true" style="cursor:pointer;">
                        <!-- The Modal -->
                        <div id="myModal" class="modal">

                          <!-- Modal content -->
                          <div class="modal-content">
                            <div class="modal-header">
                              <span class="close"><font color="white">x</font></span>
                              <h2>Votez pour votre album préféré ! <span class="glyphicon glyphicon-cd iconemodal" aria-hidden="true"></span></h2>
                            </div>
                            <div class="modal-body">
                            </br>
                                <form action="{{ path('vote') }}" method="post">
                                    <select name="album" id="album" class="select" placeholder="menu">
                                        <option placeholder="placeholder">Liste des albums</option>
                                        {% for album in albums %}
                                            <option value="{{ album.id }}">{{ album.nom }}</option>
                                        {% endfor %}
                                    </select></br>
                                    </br>
                                    <div class="btn-vote"><input type="submit" class="btn btn-danger danger" text-align: "center" value="Voter">
                                    </div></br>
                                </form>
                            </div>
                            <div class="modal-footer">
                              <h3>Résultat du vote à la rubrique "Discographie"</h3>
                            </div>
                          </div>

                        </div>

                        <script>
                        // Get the modal
                        var modal = document.getElementById('myModal');

                        // Get the button that opens the modal
                        var btn = document.getElementById("myBtn");

                        // Get the <span> element that closes the modal
                        var span = document.getElementsByClassName("close")[0];

                        // When the user clicks the button, open the modal 
                        btn.onclick = function() {
                            modal.style.display = "block";
                        }

                        // When the user clicks on <span> (x), close the modal
                        span.onclick = function() {
                            modal.style.display = "none";
                        }

                        // When the user clicks anywhere outside of the modal, close it
                        window.onclick = function(event) {
                            if (event.target == modal) {
                                modal.style.display = "none";
                            }
                        }
                        </script>
