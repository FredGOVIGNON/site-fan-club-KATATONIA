<body background="../img/Katatonia_-_Fall_Of_Hearts_-_Medium_Res_Cover.jpg")>

{% block body %}

<div class="row1">
	<div class="register">
		<div class="col-md-4"></div>
		<div class="col-md-4 fond">
			<p>Inscrivez-vous !</p>
		</div>
		<div class="col-md-4"></div>
	</div>
</div>
<div class="formu col-md-4 col-md-offset-4">
</br>
	{{ form_start(form) }}
		
		<div class="col-md-12">
			<div class="col-md-4">
				<p> Nom : </p>
			</div>
			<div class="col-md-8">
				{{ form_widget(form.username) }}
			</div>
		</div>

		<div class="col-md-12">
			<div class="col-md-4">
					<p> E-mail : </p>
				</div>
				<div class="col-md-8">
					{{ form_widget(form.email) }}
				</div>
		</div>

		<div class="col-md-12">
				<div class="col-md-4">
					<p> Mot de passe : </p>
				</div>
				<div class="col-md-8">
					{{ form_widget(form.plainPassword.first) }}
				</div>
		</div>

		<div class="col-md-12">
				<div class="col-md-4">
					<p> Confirmez votre mot de passe :</p>
				</div>
				<div class="col-md-8">
					{{ form_widget(form.plainPassword.second) }}
