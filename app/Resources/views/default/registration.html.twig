		</div>

		<div class="col-md-12">
				<div class="col-md-4"></div>
				<div class="col-md-4 cli-widg">
					<div class="col-md-4"></div>
					<div class="col-md-4">
						<input type="submit" class="btn btn-danger" value="Valider">
					</div>
					<div class="col-md-4"></div>
				</div>
				<div class="col-md-4"></div>
		</div>
		
	{{ form_end(form) }}
</div>

{% endblock %}
