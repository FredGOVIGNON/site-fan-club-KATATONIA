{% extends 'base.html.twig' %}

{% block body %}

<div class="liste_posts col-md-12">

	<div><img src="{{ asset('img/emotionheader5803640522.png') }}" class="image_journal_de_bord">
	<div class="col-md-4"></div>
	<div class="col-md-6"></br>
		<h2><span class="glyphicon glyphicon-envelope"></span>  <u>Messages des fans</u></h2>
	</br></br>
	</div>
	</div>

<div class="col-md-12 posttt">
		{% for comment in allComment|reverse %}
 			<div class="message">
		 		<div>
		 			<h4>Titre : {{ comment.titre }}</h4>
					<h4>Message : {{ comment.contenu }}</h4>
					<h4>Auteur : {{ comment.auteur }}</h4>
					<h4>Date : {{ comment.date }}</h4>
				</div>
			</div>
		{% endfor %}
</div>
</br>
<div class="col-md-12"></br>
	<h3>Laissez votre message...</h3>
	
	<div class="col-md-3"><img src="{{ asset('img/therapie-ecriture.jpg') }}" class="photo-ecriture"></div>	
	<div class="formul col-md-offset-1 col-md-5">
		<div class="col-md-10">
			<form method="post" action="{{ path("comment")}}">
				<div class="col-md-12">
					<p>
						<label>Titre</label>
						<input name="titre">
						</input>
					</p>
				</div>
				<div class="col-md-12">
					<p>
						<label>Contenu du message</label>
						<textarea name="contenu" rows="6" cols="40" placeholder="Saisir un texte ici..."></textarea>
					</p>
				</div>
				<input type="hidden" name="date" value="{{ "now"|date("d/m/Y") }}"/>
				<div class="col-md-12">
					<div class="col-md-5"></div>
					<div class="col-md-3">
						<input type="submit" class="btn btn-login btn-primary" id="_submit" name="_submit" value="Valider" />
					</div>
				</div>
			</form>
		</div>
	</div>
	<div class="col-md-3 biere"><img src="{{ asset('img/photo-groupe-biere.png') }}" class="photo-ecriture"></div></br>
</div></br>

</div></br></br> 
{% endblock %}
